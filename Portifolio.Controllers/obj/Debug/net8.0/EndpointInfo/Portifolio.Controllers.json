  "components": {
    "schemas": {
      "Asset": {
        "required": [
          "name",
          "sector",
          "symbol",
          "type"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "symbol": {
            "maxLength": 10,
            "minLength": 3,
            "type": "string"
          },
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "type": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "sector": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "currentPrice": {
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "Portfolio": {
        "required": [
          "name",
          "userId"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "userId": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "totalInvestment": {
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "positions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Position"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Position": {
        "required": [
          "assetSymbol"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "assetSymbol": {
            "minLength": 1,
            "type": "string"
          },
          "quantity": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "averagePrice": {
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          },
          "targetAllocation": {
            "maximum": 1,
            "minimum": 0,
            "type": "number",
            "format": "double"
          },
          "lastTransaction": {
            "type": "string",
            "format": "date-time"
          },
          "portfolioId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
